<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <LinearLayout
            android:id="@+id/cntDtFrom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/message"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:id="@+id/lblDtFrom"
                android:text="@string/title_dtFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <EditText
                android:id="@+id/txtDtFrom"
                android:inputType="date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:hint="yyyy-mm-dd"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/cntDtTo"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cntDtFrom"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:id="@+id/lblDtTo"
                android:text="@string/title_dtTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <EditText
                android:id="@+id/txtDtTo"
                android:inputType="date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:hint="yyyy-mm-dd"/>
    </LinearLayout>
    <Button
            android:id="@+id/btnSearch"
            android:text="@string/title_btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="156dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/cntDtTo"
            app:layout_constraintTop_toBottomOf="@+id/cntDtTo"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSearch">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewBookables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>